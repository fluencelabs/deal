{
    "name": "@fluencelabs/deal-aurora",
    "version": "0.2.11",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "npm run compile && npm run compile-ts",
        "compile": "hardhat clean && hardhat compile",
        "clean": "hardhat clean",
        "contracts:localnet": "hardhat node --tags tokens,localnet,common --hostname 0.0.0.0",
        "update-local-deployment": "cp -r ./src/deployments/localhost/* ./src/deployments/localnet",
        "deploy": "hardhat deploy --network testnet --tags tokens,testnet,common",
        "compile-ts": "shx rm -rf dist && tsc -b",
        "test": "hardhat test",
        "lint:sol": "solhint 'contracts/**/*.sol'",
        "lint:ts": "eslint 'deploy/**/*.ts' 'test/**/*.ts' --max-warnings 0 --fix",
        "fmt:sol": "prettier 'contracts/**/*.sol' -w",
        "fmt:ts": "prettier 'deploy/**/*.ts' 'test/**/*.ts' -w"
    },
    "dependencies": {
        "@nomicfoundation/hardhat-toolbox": "^3.0.0",
        "@openzeppelin/contracts": "^4.9.3",
        "@openzeppelin/contracts-upgradeable": "^4.9.3",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
        "@nomicfoundation/hardhat-ethers": "^3.0.4",
        "@nomiclabs/hardhat-ganache": "^2.0.1",
        "@nomiclabs/hardhat-solhint": "^3.0.1",
        "@typechain/ethers-v6": "^0.5.0",
        "@typechain/hardhat": "^9.0.0",
        "@types/chai": "^4.3.5",
        "@types/node": "^20.5.4",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "chai": "^4.3.7",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "ethers": "6.7.1",
        "hardhat": "^2.17.1",
        "hardhat-deploy": "^0.11.37",
        "hardhat-docgen": "^1.3.0",
        "hardhat-gas-reporter": "^1.0.9",
        "hardhat-tracer": "^2.6.0",
        "husky": "^8.0.3",
        "prettier": "^3.0.2",
        "prettier-plugin-solidity": "^1.1.3",
        "shx": "^0.3.4",
        "solhint": "^3.6.2",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.8.4",
        "ts-node": "^10.9.1",
        "typechain": "^8.3.1",
        "typescript": "^5.1.6"
    },
    "prettier": {
        "overrides": [
            {
                "files": "*.sol",
                "options": {
                    "printWidth": 140,
                    "tabWidth": 4,
                    "useTabs": false,
                    "singleQuote": false,
                    "bracketSpacing": true,
                    "semi": true
                }
            }
        ],
        "tabWidth": 4,
        "printWidth": 140,
        "trailingComma": "all",
        "singleQuote": false,
        "semi": true
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended"
        ],
        "overrides": [],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {}
    }
}
